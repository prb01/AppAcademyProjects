<table>
  <tr>
    <th>Renter</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Status</th>
  </tr>
  <% cat.rental_requests.each do |rental| %>
  <tr>
    <td><%= rental.renter.username %></td>
    <td><%= rental.start_date %></td>
    <td><%= rental.end_date %></td>
    <td>
      <% if rental.pending? && cat.owner == current_user %>
        <%= button_to 'Approve', approve_cat_rental_request_url(rental), method: :put %>
        <%= button_to 'Deny', deny_cat_rental_request_url(rental), method: :put %>
      <% else %>
        <%= rental.status %>
      <% end %>
    </td>
  </tr>
  <% end %>
