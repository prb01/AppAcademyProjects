<div class="body-form">
  <table>
    <tr>
      <th colspan="2"><h1><%= header_text %></h1></th>
    </tr>
    <form action="<%= action_url %>" method="POST">
      <%= auth_token %>

      <tr>
        <td><label for="email">Email:</label></td>
        <td><input type="text" name="user[email]" id="email"></td>
      </tr>

      <tr>
        <td><label for="password">Password:</label></td>
        <td><input type="password" name="user[password]" id="password"></td>
      </tr>

      <tr>
        <td><input type="submit" value="<%= submit_text %>" class="btn-submit"></td>
      </tr>
    </form>
  </table>
  
</div>
