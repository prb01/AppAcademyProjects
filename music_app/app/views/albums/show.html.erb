<% content_for :links do %>
  <li><%= button_to "New Track", "/new_album_track_url(@band)", method: :get %></li>
  <li><%= button_to "Edit Album", edit_album_url, method: :get %></li>
  <li><%= button_to "Destroy Album", album_url, method: :delete %></li>
  <li><%= button_to @album.band.name, band_url(@album.artist_id), method: :get %></li>
<% end %>

<div>
  <h2><%= @album.band.name %></h2>
</div>

<h3>
  <%= "#{@album.title} (#{@album.year})" %>
  <%= " live" if !@album.studio %>
</h3>


<ul>
  <%# @album.tracks.each do |track| %>
    <li class="music-links"><%#= link_to "#{track.title}", track_url(track) %></li>
  <%# end %>
</ul>
