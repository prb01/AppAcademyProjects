<!DOCTYPE html>
<html>
  <head>
    <title>GoalsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Goal Setting App</h1>

    <ul>
      <li><%= link_to 'All Users', users_url %></li>
      <% if !logged_in? %>
          <li><%= link_to 'Sign up', new_user_url %></li>
          <li><%= link_to 'Sign in', new_session_url %></li>
          </ul>       
      <% else %>
        <li><%= link_to 'Add Goal', new_goal_url %></li>
        <li><%= link_to current_user.email+'\'s Profile', user_url(current_user) %></li>
        </ul>
        <%= button_to 'Logout', session_url, method: :delete %>
      <% end %>    
    
    <%= yield %>

    <%= render 'layouts/errors' %>
  </body>
</html>
