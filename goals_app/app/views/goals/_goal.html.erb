<table>
  <tr>
    <td>Title</td>
    <td><%= goal.title %></td>
  </tr>

  <tr>
    <td>Visibility</td>
    <td>
      <% if goal.private %>
        Private
      <% else %>
        Public
      <% end %>
    </td>
  </tr>

  <tr>
    <td>Status:</td>
    <td>
      <% if goal.completed %>
        Completed
      <% else %>
        In Progress
      <% end %>
    </td>
  </tr>

  <tr>
    <td>Details</td>
    <td><%= goal.details %></td>
  </tr>
</table>

<% if goal.completed %>
  <%= button_to 'In Progress', toggle_completed_goal_url(goal), method: :post %>
<% else %>
  <%= button_to 'Completed', toggle_completed_goal_url(goal), method: :post %>
<% end %>

<%= button_to 'Destroy Goal', goal_url(goal), method: :delete %>
